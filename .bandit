# Bandit configuration file for security scanning
# https://bandit.readthedocs.io/en/latest/config.html

[bandit]
# Exclude test files and generated code
exclude: /electrum/tests,/electrum/gui/qt/forms,/build,/dist,/electrum/locale

# Skip specific test IDs
# B101: assert_used - We use asserts for runtime checks
# B601: paramiko_calls - False positives on shell commands
# B603: subprocess_without_shell_equals_true - We handle this carefully
skips: B101,B601,B603

# Test IDs to run
tests: B102,B103,B104,B105,B106,B107,B108,B110,B112,B201,B301,B302,B303,B304,B305,B306,B307,B308,B309,B310,B311,B312,B313,B314,B315,B316,B317,B318,B319,B320,B321,B323,B324,B401,B402,B403,B404,B405,B406,B407,B408,B409,B410,B411,B412,B413,B501,B502,B503,B504,B505,B506,B507,B602,B604,B605,B606,B607,B608,B609,B610,B611,B701,B702,B703

# Severity level threshold (LOW, MEDIUM, HIGH)
level: LOW

# Confidence level threshold (LOW, MEDIUM, HIGH)
confidence: LOW

# Output format
format: json
output_format: json